#!/usr/bin/env ruby

################################################################################
# MmToolCli
#  This file constitutes the command line interface for mm_tool.
################################################################################

require 'fileutils'
require_relative '../lib/mm_tool/version'


module MmToolCli

  class Cli

    def self.print_help(*args)
      puts "DUDE"
      puts args.count, $0
      if args.count == 0
        puts <<-HEREDOC
        HERE!!!
        HEREDOC
      end # if 
    end # print_help


  end # class Cli

end # module MiddlemacCli


###########################################################
# Main
###########################################################

MmToolCli::Cli.print_help(ARGV)
