#!/usr/bin/env ruby

################################################################################
# MmToolCli
#  This file constitutes the command line interface for mm_tool.
################################################################################

require 'fileutils'
require 'tty-screen'
require_relative '../lib/mm_tool'


module MmToolCli

  def self.print_help(*args)

    width = TTY::Screen.width


    puts "DUDE, screen is #{width} columns."
    puts args.count, $0
    if args.count == 0
      puts <<-HEREDOC
      HERE!!!
      HEREDOC
    end # if
  end # print_help


end # module MmToolCli


###########################################################
# Main
###########################################################

MmToolCli.print_help(ARGV)

app = MmTool::ApplicationMain.sharedApplication

pp app.options[:media_files]
app.options[:media_files][:value] = "Hello, Jim"
pp app.options[:media_files][:value]
